{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "plugins": ["react", "react-hooks"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used"
      }
    ],
    "prefer-const": "error",
    "no-tabs": "off",
    "no-useless-return": "off",
    "react/style-prop-object": "error",
    "react/jsx-key": 2,
    "react/jsx-curly-spacing": [2, "never"],
    "no-console": ["error", { "allow": ["warn", "error"] }],
    "react/prop-types": "off"
  },
  "settings": {
    "react": {
      "version": "16.13.1"
    }
  }
}
